<div class="navbar navbar-expand-sm navbar-light navbar-lewagon m-4">
  <div class="container-fluid">

    <a class="align-items-center navbar-brand text-align d-flex justify-content-around" href="#">
      <img class="avatar" id="navbar-logo" src="https://1000logos.net/wp-content/uploads/2022/09/Stars-Coffee-Logo.jpg" />
      <h4 class="m-3"><strong>Stars Coffee</strong></h4>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">

      <div class="search-form-control form-group d-flex justify-content-center">
        <input class="form-control string required h-25" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </form>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <a class="nav-link m-2" href="#">Log out</a>
          </li>

          <li class="nav-item dropdown m-2">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Profile </a>
              <a class="dropdown-item" href="#">Favorites</a>
              <a class="dropdown-item" href="#">Messages</a>
              <a class="dropdown-item" href="#">Purchases</a>
              <a class="dropdown-item" data-turbo-method="delete" href="#">Log out</a>
            </div>
          </li>
            <!--li class="nav-item"-->
            <!--/li-->
        </ul>
      <% else %>
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Log In", new_user_session_path, class: "nav-link m-2" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link m-2" %>
          </li>
        </ul>
      <% end %>
    </div>

  </div>
</div>
