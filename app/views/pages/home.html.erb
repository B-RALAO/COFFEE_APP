<div class="container">
  <div class="my-5 video-container d-flex justify-content-center position-relative">
    <%= image_tag 'coffee_video1.gif', class: 'shadow mx-3 fit-image opacity-50', style: 'height: 300px width: auto' %>
    <div class="title-text position-absolute bottom-0 start-50 translate-middle">
      <h2 class="title-size mb-5 text-center">Stars Coffee</h2>
      <h4 class="motto-size text-center">Awaken Your Senses, One Bean at a Time!</h4>
    </div>
  </div>






  <div class="p-5">
    <div class="row align-items-center justify-content-around">
      <div class="col-6 rounded-4" style="width:300px; height:200px; background-position: center;background-size: cover;background-image:url('https://perfectdailygrind.com/wp-content/uploads/2017/08/b4bdg_3_8_2017_9_41_15_854-1-e1502286325355.jpg')">
      </div>
      <div class="col-6 d-flex flex-column justify-content-between" style="margin-left: -15px;">
        <h1>Brew, Share, Sip</h1>
        <p>Welcome to Stars Coffee - your hub for coffee enthusiasts!
        Sign in to explore and buy unique coffee blends or
        showcase your passion by selling your own creations
        in our community-driven marketplace.
        </p>
      </div>
    </div>
  </div>

  <hr>

  <div>
    <h1 class="text-center text-primary fw-bold p-5">Top Coffees</h1>
    <div class="d-flex justify-content-end pe-4">
      <% if user_signed_in? %>
        <p> <%= link_to "View all coffees", coffees_path %></p>
      <%else %>
        <p> <%= link_to "Sign in to view more coffees!", coffees_path %></p>
      <% end %>
    </div>

    <div class="row">
      <% if @coffees.any? %>
        <% @coffees.each do |coffee| %>
          <%= render "/coffees/coffee_card", coffee: coffee %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
