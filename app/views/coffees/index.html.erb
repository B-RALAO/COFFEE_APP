<div class="container">
  <div class=>
    <div class="btn btn-primary m-3 justify-content-end">
      <%= link_to "Add new coffee", new_coffee_path, class: "text-white" %>
    </div>
  </div>
  <h1 class="text-center m-3">All Coffees</h1>
  <div class="row">
    <% if @coffees.any? %>
      <% @coffees.each do |coffee| %>
        <%= render "/coffees/coffee_card", coffee: coffee %>
      <% end %>
      <% else %>
        <p>No Coffees yet</p>
    <% end %>
  </div>
</div>
