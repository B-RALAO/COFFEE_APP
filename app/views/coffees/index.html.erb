<h1>All Coffees</h1>

<% if @coffees.any? %>
  <% @coffees.each do |coffee| %>
    <p>
      <% if coffee.photo.attached? %>
        <%= cl_image_tag coffee.photo.key%>
      <% else %>
        <%= image_tag "coffee_beans.png", width: 300 %>
      <% end %>
    <%= coffee.name %>
    <%= coffee.origin %>
    <%= coffee.strength %>
    <%= coffee.rating %>
    <%= coffee.description %>
    <%= link_to "More info", coffee_path(coffee) %>
  </p>
  <% end %>
<% else %>
  <p>No Coffees yet</p>
<% end %>

<%= link_to "Add new coffee", new_coffee_path %>
<%= link_to "Back to home", root_path %>
<%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete}  %>
