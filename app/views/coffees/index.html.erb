<div class="container">
  <div class='d-flex justify-content-end'>
    <div class="btn btn-primary btn-lg m-3 rounded-4">
      <%= link_to new_coffee_path, class: "text-white" do %>
      <i class="fa-solid fa-plus" style="color: $primary"></i>
      <% end %>
    </div>
  </div>
  <h1 class="text-center text-primary fw-light">All Coffees</h1>
  <div class="row">
    <% if @coffees.any? %>
      <% @coffees.each do |coffee| %>
        <%= render "/coffees/coffee_card", coffee: coffee %>
      <% end %>
      <% else %>
        <p>No Coffees yet</p>
    <% end %>
  </div>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
